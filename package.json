{
  "name": "xtreme-game-dev-client",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://www.xtreme-game.dev",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm-run-all --parallel watch:html watch:css",
    "watch:html": "cross-env ELEVENTY_ENV=dev eleventy --serve --input=./src --output=./dist",
    "watch:js": "webpack --config webpack.dev.js",
    "watch:css": "postcss ./src/styles/tailwind.css -o ./dist/index.css --watch",
    "build": "npm-run-all clean build:html build:css",
    "build:html": "cross-env ELEVENTY_ENV=prod eleventy --input=./src --output=./dist",
    "build:js": "webpack --config webpack.prod.js",
    "build:css": "postcss ./src/styles/tailwind.css -o ./dist/index.css",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvinberthelot/xtreme-game-dev-client.git"
  },
  "keywords": [
    "extreme",
    "xtreme",
    "game",
    "development",
    "developer",
    "coding",
    "api"
  ],
  "author": "Alvin Berthelot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alvinberthelot/xtreme-game-dev-client/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "0.10.0",
    "cross-env": "7.0.2",
    "html-minifier": "4.0.0",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1"
  },
  "dependencies": {
    "chart.js": "2.9.3",
    "hex-to-rgba": "2.0.1",
    "lit-html": "1.2.1",
    "lodash": "4.17.15",
    "moment": "2.24.0",
    "rxjs": "6.5.5",
    "tailwindcss": "1.2.0"
  }
}
